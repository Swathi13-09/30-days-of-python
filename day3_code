print("Choose a project to run:")
print("1. BMI Calculator")
print("2. Simple Interest Calculator")
print("3. Temperature Converter")
print("4. Bill Splitter")
print("5. Age in Days Calculator\n")

choice = input("Enter your choice (1-5): ")

# 1ï¸âƒ£ BMI CALCULATOR
if choice == "1":
    print("\nğŸ§â€â™€ï¸ BMI (Body Mass Index) Calculator\n")
    weight = float(input("Enter your weight in kg: "))
    height = float(input("Enter your height in meters: "))
    bmi = weight / (height ** 2)
    print(f"ğŸ§® Your BMI is: {bmi:.2f}")
    if bmi < 18.5:
        print("ğŸ”¸ You are underweight.")
    elif 18.5 <= bmi < 25:
        print("âœ… You have a normal weight.")
    elif 25 <= bmi < 30:
        print("âš ï¸ You are overweight.")
    else:
        print("ğŸš¨ You are obese.")

# 2ï¸âƒ£ SIMPLE INTEREST CALCULATOR
elif choice == "2":
    print("\nğŸ¦ Simple Interest Calculator\n")
    principal = float(input("Enter Principal Amount (â‚¹): "))
    rate = float(input("Enter Interest Rate (%): "))
    time = int(input("Enter Time (in years): "))
    si = (principal * rate * time) / 100
    print(f"ğŸ’° Simple Interest = â‚¹{si:.2f}")
    print(f"ğŸ“ˆ Total Amount = â‚¹{principal + si:.2f}")

# 3ï¸âƒ£ TEMPERATURE CONVERTER
elif choice == "3":
    print("\nğŸŒ¡ï¸ Temperature Converter\n")
    unit = input("Convert to (C/F): ").upper()
    if unit == "C":
        f = float(input("Enter temperature in Fahrenheit: "))
        c = (f - 32) * 5/9
        print(f"ğŸŒ¡ï¸ {f}Â°F = {c:.2f}Â°C")
    elif unit == "F":
        c = float(input("Enter temperature in Celsius: "))
        f = (c * 9/5) + 32
        print(f"ğŸŒ¡ï¸ {c}Â°C = {f:.2f}Â°F")
    else:
        print("âŒ Invalid choice. Use C or F.")

# 4ï¸âƒ£ BILL SPLITTER
elif choice == "4":
    print("\nğŸ½ï¸ Dinner Bill Splitter\n")
    total = float(input("Enter total bill amount (â‚¹): "))
    friends = int(input("How many friends to split with: "))
    share = total / friends
    print(f"ğŸ’¸ Each friend should pay: â‚¹{share:.2f}")
# 5ï¸âƒ£ AGE IN DAYS CALCULATOR (Based on Year Only)
elif choice == "5":
    from datetime import date

    print("\nğŸ“† Age Calculator (from Year Only)\n")

    birth_year = int(input("Enter your birth year (e.g., 2003): "))

    # Assume Jan 1st of birth year
    dob = date(birth_year, 1, 1)
    today = date.today()

    # Calculate age in days
    age_in_days = (today - dob).days

    # Calculate approximate years
    age_years = today.year - birth_year

    print(f"ğŸ“… You were born in: {birth_year}")
    print(f"ğŸ§“ You are approximately {age_years} years old.")
    print(f"ğŸ—“ï¸ That's about {age_in_days} days since your birth.")



